@model IEnumerable<AdminProductManager.Models.Product>
@{
    ViewData["Title"] = "Product List";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
<h2>Product List</h2>
<a class="btn btn-primary mb-2" href="@Url.Action("Add")">Add Product</a>
<!-- Đã xóa nút Create New -->
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" width="80" />
                }
            </td>
            <td>
                <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = item.Id })">Details</a>
                <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = item.Id })">Edit</a>
                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table> 