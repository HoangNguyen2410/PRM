@model AdminProductManager.Models.Product
@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<h2>Thêm sản phẩm mới</h2>

<form asp-action="Add" method="post">
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="form-group">
        <label asp-for="Name">Tên sản phẩm</label>
        <input asp-for="Name" class="form-control" placeholder="Tên sản phẩm" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Giá sản phẩm</label>
        <input asp-for="Price" class="form-control" placeholder="Giá sản phẩm" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Mô tả sản phẩm</label>
        <input asp-for="Description" class="form-control" placeholder="Mô tả sản phẩm" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Link ảnh sản phẩm</label>
        <input asp-for="ImageUrl" class="form-control" placeholder="Link ảnh sản phẩm" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock">Tồn kho</label>
        <input asp-for="Stock" class="form-control" placeholder="Tồn kho" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Thêm</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 